---
import Shell from '../layouts/shell.astro';
import {links} from '../data';
---

<Shell frontmatter={{ title: 'jojobii', description: `jojobii's home page. links to my social media and everything else.` }}>

	<style>
		.jello-horizontal {
			animation: jello-horizontal 0.9s both;
		}
		/* ----------------------------------------------
		* Generated by Animista on 2023-6-30 23:27:35
		* Licensed under FreeBSD License.
		* See http://animista.net/license for more info. 
		* w: http://animista.net, t: @cssanimista
		* ---------------------------------------------- */
		@keyframes jello-horizontal {
			0% {
				transform: scale3d(1, 1, 1);
			}
			30% {
				transform: scale3d(1.25, 0.75, 1);
			}
			40% {
				transform: scale3d(0.75, 1.25, 1);
			}
			50% {
				transform: scale3d(1.15, 0.85, 1);
			}
			65% {
				transform: scale3d(0.95, 1.05, 1);
			}
			75% {
				transform: scale3d(1.05, 0.95, 1);
			}
			100% {
				transform: scale3d(1, 1, 1);
			}
		}
	</style>

	<div class="text-center font-light my-16">
		<h1 class="font-black text-7xl mb-4">jojobii</h1>
		<p class="text-2xl mb-4">hiii :3</p>
		<p class="mb-8 italic">here's my internet presence...</p>
		<div class="max-w-3xl mx-auto mb-16">
			<h2 class="font-bold text-2xl mb-4">Links</h2>
			<ul class="flex flex-col gap-2">
				{links.map(link => (
					<li class="inline-block mx-2">
						<a
							href={link.url}
							class="font-mono underline bg-cyan-100 hover:bg-cyan-200 transition-colors"
							target="_blank"
						>
							{link.label}
						</a>
					</li>
				))}
			</ul>
		</div>
		<img
			id="chibi"
			class="max-w-sm mx-auto hover:cursor-pointer"
			src="/assets/jojobii.png"
			alt="jojobii's chibi"
		/>
	</div>

	<script>
		const soundEffect = new Audio('/assets/rizz.mp3');
		const $chibi = document.querySelector('#chibi');
		$chibi.addEventListener('click', () => {
			$chibi.animate(
				[
					{ transform: 'scale3d(1, 1, 1)' },
					{ transform: 'scale3d(1.25, 0.75, 1)' },
					{ transform: 'scale3d(0.75, 1.25, 1)' },
					{ transform: 'scale3d(1.15, 0.85, 1)' },
					{ transform: 'scale3d(0.95, 1.05, 1)' },
					{ transform: 'scale3d(1.05, 0.95, 1)' },
					{ transform: 'scale3d(1, 1, 1)' }
				],
				500
			);
			soundEffect.currentTime = 0;
			soundEffect.play();
		});
	</script>
</Shell>
